{
    "name": "Python 3.12 Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python3.12"
            },
            "extensions": [
                "ms-toolsai.jupyter",
                "ms-python.python",
                "ms-python.debugger"
            ]
        }
    },
    "postCreateCommand": "python3 -m venv .venv && . .venv/bin/activate && pip install --upgrade pip && pip install devtools jupyter ipykernel"
}